{
  "database": {
    "rules": "database.rules"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/extract",
        "run": {
          "serviceId": "contract-extractor",
          "region": "asia-southeast2"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=7200"
          }
        ]
      }
    ],
    "storage": {
      "rules": "storage.rules"
    },
    "emulators": {
      "auth": {
        "port": 9099
      },
      "functions": {
        "port": 5001
      },
      "firestore": {
        "port": 8080
      },
      "database": {
        "port": 9000
      },
      "hosting": {
        "port": 5050
      },
      "pubsub": {
        "port": 8085
      },
      "storage": {
        "port": 9199
      },
      "ui": {
        "enabled": true,
        "port": 4300
      }
    },
    "remoteconfig": {
      "template": "remoteconfig.template.json"
    },
    "extensions": {
      "firestore-send-email": "firebase/firestore-send-email@0.1.19"
    }
  }
}